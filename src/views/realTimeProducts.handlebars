<link rel="stylesheet" href="css/main.css">

<h1>Lista de productos, en tiempo real</h1>

<div>
  <ul id="productList">
  </ul>
</div>

<button id="openModal">Agregar Producto</button>

<div id="modalOverlay" class="overlay">
  <div class="modal">
    <span id="closeModal" class="close">&times;</span>
    <h2>Agregar Producto</h2>
    <form id="productForm">
      <input type="text" id="name" placeholder="Nombre del producto" required />
      <input type="text" id="description" placeholder="Descripción" required />
      <input type="text" id="code" placeholder="Código del producto" required />
      <input type="number" id="price" placeholder="Precio" step="any" required />
      <input type="number" id="stock" placeholder="Stock" required />
      <input type="text" id="category" placeholder="Categoría" required />
      <button type="submit">Agregar Producto</button>
    </form>
  </div>
</div>

<script src="https://cdn.socket.io/4.8.1/socket.io.min.js"></script>
<script src="js/main.js"></script>